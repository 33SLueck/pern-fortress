# Beispiel-Konfigurationsdatei für pern-fortress
# Kopiere diese Datei zu .env und passe die Werte an deine Umgebung an

# =================================
# DATABASE CONFIGURATION
# =================================
DATABASE_URL="postgresql://postgres:postgres@db:5432/pern_fortress_db"
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=pern_fortress_db
PGPASSWORD=postgres
# =================================
# SERVER CONFIGURATION
# =================================
PORT=3000
NODE_ENV=development

# =================================
# SECURITY & AUTHENTICATION
# =================================
JWT_SECRET=your_jwt_secret_key_here_make_it_very_long_and_secure
JWT_EXPIRES_IN=7d

# =================================
# CORS CONFIGURATION
# =================================
FRONTEND_URL=http://localhost:5176
ALLOWED_ORIGINS=http://localhost:5176,http://localhost:3000

# =================================
# API CONFIGURATION
# =================================
API_BASE_PATH=/api/v1
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =================================
# LOGGING
# =================================
# Log-Verzeichnis für Backend-Logs (Winston, Promtail, Loki)
# Standard: ./log (lokal/CI), im Container: /app/log
# LOG_DIR=./log
# LOG_DIR=/app/log

# =================================
# DEVELOPMENT TOOLS
# =================================
PRISMA_STUDIO_PORT=5555

# =================================
# OPTIONAL: EXTERNAL SERVICES
# =================================
# Grafana SMTP (für Alert-Mails)
# Grafana Admin Login (für lokalen Zugriff, siehe Docker Setup Fix Guide)
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin

# Grafana SMTP (für Alert-Mails)
GF_SMTP_ENABLED=true
GF_SMTP_HOST=your_smtp_host_here:465
GF_SMTP_STARTTLS_POLICY=NoStartTLS
GF_SMTP_USER=your_smtp_user_here
GF_SMTP_PASSWORD=your_password_here
GF_SMTP_FROM_ADDRESS=your_from_address_here
GF_SMTP_FROM_NAME=Fortress
GF_SMTP_SKIP_VERIFY=true

# Redis (if needed for caching/sessions)
# REDIS_URL=redis://localhost:6379

# =================================
# DEVELOPMENT ONLY
# =================================
DEBUG=true
LOG_LEVEL=debug
